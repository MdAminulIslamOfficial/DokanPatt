<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deleteItemsActivity"

    android:background="@drawable/homepage">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:text="Item to Delete:"
        android:textColor="#26A69A"
        android:textSize="16dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/modrena"
        android:text="Delete Items"
        android:textAlignment="center"
        android:textColor="#00BFA5"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/barcodedelete"
        android:layout_width="211dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="-293dp"
        android:ems="10"
        android:hint="Enter Code Number"
        android:inputType="textPersonName"
        android:textColor="#00BFA5"
        android:textColorHint="#FF6D00"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="211dp" />

    <Button
        android:id="@+id/buttonscandelete"
        android:layout_width="240dp"
        android:layout_height="68dp"
        android:layout_alignBottom="@+id/barcodeview"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="385dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Scan Bar/QR Code"
        android:textStyle="italic"
        tools:ignore="UnknownIdInLayout"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="211dp" />

    <Button
        android:id="@+id/deleteItemToTheDatabasebtn"
        android:layout_width="224dp"
        android:layout_height="67dp"
        android:layout_alignBottom="@+id/buttonscandelete"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="-90dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Delete Item"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="211dp" />

</RelativeLayout>
